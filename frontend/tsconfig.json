{
  "compilerOptions": {
    "typeRoots": ["@types", "node_modules/@types"],
    "baseUrl": "./src",
    "outDir": "./build",
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["../assets/*"],
      "@externals/*": ["../externals/*"]
    },
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noImplicitOverride": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "Node"
  }
}
