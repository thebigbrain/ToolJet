{
  "compilerOptions": {
    "typeRoots": ["@types", "node_modules/@types"],
    "baseUrl": "./src",
    "outDir": "./build",
    "paths": {
      "@/*": ["./*"]
    },
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "Node"
  }
}
